<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN" 
"http://struts.apache.org/dtds/struts-2.3.dtd" >
<struts>
	<!-- 配置购物车 -->
	<package name="shop" extends="struts-default" namespace="/shop">
		<action name="add" class="com.baizhi.xzy.action.ShopAction" method="add">
			<result name="add" type="redirect">/front/cart/cart_list.jsp</result>
		</action>
		<action name="delete" class="com.baizhi.xzy.action.ShopAction" method="delete">
			<result name="delete" type="redirect">/front/cart/cart_list.jsp</result>
		</action>
		<action name="recover" class="com.baizhi.xzy.action.ShopAction" method="recover">
			<result name="recover" type="redirect">/front/cart/cart_list.jsp</result>
		</action>
		<action name="update" class="com.baizhi.xzy.action.ShopAction" method="update">
			<result name="update" type="redirect">/front/cart/cart_list.jsp</result>
		</action>
	</package>
</struts>